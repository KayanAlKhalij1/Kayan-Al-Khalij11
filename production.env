# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database
DB_PATH=/app/database/kayan_factory.db

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=info@kayanfactory.com
EMAIL_PASS=your-production-app-password
EMAIL_FROM=info@kayanfactory.com
EMAIL_TO=info@kayanfactory.com

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
API_KEY=your-secure-api-key-here

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (production only)
CORS_ORIGINS=https://kayanalkhalij1.github.io,https://kayanalkhalij1.github.io/Kayan-Al-Khalij11

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Database settings
DB_CONNECTION_LIMIT=20
DB_TIMEOUT=10000

# Email settings
EMAIL_RETRY_ATTEMPTS=5
EMAIL_RETRY_DELAY=2000

# Analytics settings
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000

# Performance
COMPRESSION_LEVEL=9
CACHE_TTL=7200

# Monitoring
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Security headers
HELMET_CSP=true
HELMET_HSTS=true
HELMET_NO_SNIFF=true
HELMET_FRAME_OPTIONS=true
