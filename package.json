{
  "name": "kayan-alkhalij-website",
  "version": "2.0.0",
  "description": "كيان الخليج للصناعة - موقع إلكتروني متطور ومتجاوب",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "dev": "live-server --port=3000 --open=/index.html --watch=.",
    "build": "npm run minify-css && npm run minify-js && npm run optimize-images",
    "minify-css": "cleancss -o style.min.css style.css",
    "minify-js": "uglifyjs script.js -o script.min.js --compress --mangle",
    "optimize-images": "imagemin *.png *.jpg *.jpeg --out-dir=./optimized",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint script.js",
    "accessibility": "pa11y http://localhost:3000",
    "deploy": "echo \"Deploy to your hosting provider\"",
    "analyze": "npm run lighthouse && npm run accessibility",
    "serve": "serve -s . -p 3000",
    "compress": "npm run minify-css && npm run minify-js",
    "validate": "html-validate *.html",
    "performance": "npm run lighthouse",
    "seo": "npm run build && npm run validate",
    "pwa": "npm run build && npm run validate",
    "security": "npm audit",
    "clean": "rm -rf node_modules package-lock.json",
    "install-deps": "npm install",
    "update-deps": "npm update",
    "check-updates": "npm outdated",
    "audit-fix": "npm audit fix",
    "preview": "npm run build && npm run serve",
    "production": "npm run build && npm run compress && npm run optimize-images"
  },
  "keywords": [
    "kayan",
    "alkhalij",
    "manufacturing",
    "curtain-wall",
    "cladding",
    "aluminum",
    "windows",
    "doors",
    "saudi-arabia",
    "construction",
    "engineering",
    "pwa",
    "responsive",
    "arabic",
    "rtl"
  ],
  "author": {
    "name": "كيان الخليج للصناعة",
    "email": "kayanalkhalij.eng1@gmail.com",
    "url": "https://www.linkedin.com/company/kayan-aluminum-factory/"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayan-alkhalij/website.git"
  },
  "bugs": {
    "url": "https://github.com/kayan-alkhalij/website/issues"
  },
  "homepage": "https://kayanfactory.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.4.0",
    "eslint": "^8.45.0",
    "pa11y": "^6.2.3",
    "live-server": "^1.2.2",
    "serve": "^14.2.0",
    "html-validate": "^8.8.0",
    "npm-check-updates": "^16.10.0",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0",
    "postcss": "^8.4.24",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "browserslist": "^4.21.5"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {}
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  }
} 